@model IEnumerable<MvcPL.Models.PostViewModel>

@{
    ViewBag.Title = "PostsInSection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() !=0)
{
    <table border="1">
        <tr>
            <th>
                @Html.Label("Тема")
            </th>
            <th>
                @Html.Label("Дата создания")
            </th>
            <th>
                @Html.Label("Автор")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.PostName, "SinglePost", "Post", new { id = item.PostId }, new { @class = "form-control" });
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfPost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorLogin)
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>
        <h2 class="badge" style="font-size:x-large; color:steelblue"> В категории нет ни одной темы</h2>
    </p>
}

<div class="badge">
    @Html.ActionLink("Назад", "Index")
</div>

