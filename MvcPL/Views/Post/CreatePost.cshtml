@using MvcPL.Models
@model PostViewModel

@{
    ViewBag.Title = "CreatePost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="alert">
    <h2 align="center">CreatePost</h2>
</div>
@using (Html.BeginForm())
{
    <div class="alert">
        <div class="col-md-12">
            <div class="badge">
                @Html.ActionLink("Назад", "Cabinet", "User")
            </div>
            @Html.DropDownListFor(model => model.Section, new SelectList(Enum.GetNames(typeof(Section))), string.Empty)
        </div>
        @Html.LabelFor(model => model.PostName, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-10" style="margin-top:0px;margin-bottom:0px;display:block;width:100%">
            @Html.TextBoxFor(model => model.PostName, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-md-12">
            <input type="submit" class="btn btn-default" value="Отправить вопрос" />
        </div>

    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
